<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnalyzeFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/analyze_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:src="@drawable/title_logo" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/analyze_toolbar"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:text="주간 섭취율을 통해 분석한 결과\n당신은 탄수화물 과다 타입입니다."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="27sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/analyzeImage"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@+id/textView4"
        android:src="@drawable/foodgraph"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/analyzeImage"

        android:text="추천 식단"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>

    <ListView
        android:id="@+id/recommendlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/recommend"
        android:layout_margin="15dp"
        android:layout_marginTop="11dp"
        android:divider="#ffffff"/>

    <!-- TODO: Update blank fragment layout -->


</RelativeLayout>